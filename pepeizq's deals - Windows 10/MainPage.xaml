<Page
    x:Class="pepeizq_s_deals___Windows_10.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:fa="using:FontAwesome.UWP"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{StaticResource Fondo}">
        <Grid.Transitions>
            <TransitionCollection>
                <EdgeUIThemeTransition Edge="Bottom"/>
            </TransitionCollection>
        </Grid.Transitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTitulo" Grid.Row="0" Background="{StaticResource TituloFondo}">
            <TextBlock x:Name="tbTitulo" Margin="15,0,0,0" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Padding="20,15,20,20" Margin="15">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="{StaticResource ColorTercero}" Offset="0.5" />
                        <GradientStop Color="{StaticResource ColorCuarto}" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Padding="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Name="spBotonesSeleccion" Grid.Column="0" Orientation="Horizontal" Padding="10,0">
                        <Button x:Name="botonSeleccionarTodo" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                            <Button.Content>
                                <StackPanel x:Name="spSeleccionarTodo" Orientation="Horizontal" BorderBrush="White" Padding="0,5" Margin="10,0">
                                    <TextBlock x:Uid="All" Foreground="White" FontSize="17"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button x:Name="botonSeleccionarBundles" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                            <Button.Content>
                                <StackPanel x:Name="spSeleccionarBundles" Orientation="Horizontal" BorderBrush="White" Padding="0,5" Margin="10,0">
                                    <TextBlock x:Uid="Bundles" Foreground="White" FontSize="17"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button x:Name="botonSeleccionarOfertas" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                            <Button.Content>
                                <StackPanel x:Name="spSeleccionarOfertas" Orientation="Horizontal" BorderBrush="White" Padding="0,5" Margin="10,0">
                                    <TextBlock x:Uid="Deals" Foreground="White" FontSize="17"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button x:Name="botonSeleccionarGratis" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                            <Button.Content>
                                <StackPanel x:Name="spSeleccionarGratis" Orientation="Horizontal" BorderBrush="White" Padding="0,5" Margin="10,0">
                                    <TextBlock x:Uid="Free" Foreground="White" FontSize="17"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button x:Name="botonSeleccionarSuscripciones" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                            <Button.Content>
                                <StackPanel x:Name="spSeleccionarSuscripciones" Orientation="Horizontal" BorderBrush="White" Padding="0,5" Margin="10,0">
                                    <TextBlock x:Uid="Subscriptions" Foreground="White" FontSize="17"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <Button x:Name="botonActualizar" Grid.Column="1" Margin="15,0" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Padding="5">
                                <fa:FontAwesome Icon="Refresh" Foreground="White" FontSize="17"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
                
                <ProgressRing x:Name="prPrincipal" Grid.Row="1" Visibility="Collapsed" Width="50" Height="50" Foreground="White" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ListView x:Name="lvPrincipal" Grid.Row="1" Padding="0,0,20,0"/>
            </Grid>

            <Grid Grid.Column="1">
                <ListView x:Name="lvAnuncios"/>
            </Grid>
        </Grid>
        
    </Grid>
</Page>
